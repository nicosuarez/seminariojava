<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
	
<hibernate-mapping package="ar.com.infocompany.model">
    <class name="Job" table="Job">
        <id name="id" access="field" column="Id" unsaved-value="0">
            <generator class="native"></generator>
        </id>
        
        <many-to-one cascade="all" name="industry" class="Industry" access="field" column="IndustryId"></many-to-one>
        <property name="name" access="field" column="Name"></property>
        
    </class>
</hibernate-mapping>
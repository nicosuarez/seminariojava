<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
	
<hibernate-mapping package="ar.com.infocompany.entities">
    <class name="Company" table="Company">
        <id name="CompanyId" type="integer" column="CompanyId" length="11" unsaved-value="null">
            <generator class="native"/>
        </id>
        <property name="Name" type="string">
            <column name="Name"/>
        </property>
        <many-to-one name="FieldId" class="ar.com.infocompany.entities.Field" column="FieldId" 
        not-null="true" unique="true"/>
    </class>
</hibernate-mapping>
<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
	
<hibernate-mapping package="ar.com.infocompany.model">
    <class name="Critic" table="Critic">
        <id name="id" access="field" column="Id" unsaved-value="0">
            <generator class="native"></generator>
        </id>

        <property name="Salary" type="integer">
            <column name="Salary" />
        </property>
         
   		
        <bag name="replies" access="field" cascade="all" inverse="true" lazy="true" table="Comment" fetch="select">
            <key>
                <column name="CriticId" not-null="true" />
            </key>
            <one-to-many class="Comment" />
        </bag>
        <one-to-one name="comment" access="field" class="Comment" cascade="all"></one-to-one>
         	              
        <many-to-one name="company" access="field" class="Company" fetch="select">
            <column name="CompanyId" not-null="true" />
        </many-to-one>
        
        <many-to-one name="author" access="field" class="User" fetch="select">
            <column name="UserId" not-null="true" />
        </many-to-one>
        
        <!-- TODO: sacar cascade="all"  ver hay que hacer el repositorio de job -->
        <many-to-one name="job" cascade="all" access="field" class="Job" column="JobId" not-null="true"  />
        
        <bag name="items" access="field" cascade="all" lazy="true" fetch="select">
            <key>
                <column name="CriticId" /> <!-- not-null="true"  -->
            </key>
            <one-to-many class="Item" />
        </bag>
        
    </class>
</hibernate-mapping>
